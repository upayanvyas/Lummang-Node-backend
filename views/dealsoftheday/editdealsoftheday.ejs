<!doctype html>
<html lang="en" dir="ltr">
    <head>

        <%- include('../common/_head');-%>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />

    </head>

</html> 


<body class="app sidebar-mini" style="font-family: inter-regular;">

    <!-- GLOBAL-LOADER -->
    <div id="global-loader">
        <img src="/images/svgs/loader.svg" class="loader-img" alt="Loader">
    </div>

    <div class="page">
        <div class="page-main">
            <!-- HEADER -->
           
            <%- include('../common/_header');-%>
            <!-- HEADER END -->

            <!-- APP SIDEBAR -->

            <%- include('../common/_leftsidebar');-%>
            
            <!-- APP SIDEBAR CLOSED -->

            <!-- CONTAINER -->
            <div class="app-content">
                <div class="section">

                   

                    <!-- PAGE-HEADER -->
                    <div class="page-header">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fe fe-home mr-1"></i> Masters</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Dealsoftheday</li>
                        </ol>
                        <div class="ml-auto">
                            <a href="/viewdealsoftheday" class="btn btn-primary btn-icon btn-sm text-white mr-2">
                                <span>
                                    <i class="fe fe-plus"></i>
                                </span> Dealsoftheday List
                            </a>
                        </div>
                    </div>
                    <!-- PAGE-HEADER END -->

                   
                   
                   
                    <!-- ROW-5 -->
                    <div class="row">
                        <div class="col-12 col-sm-12">
                            <div class="card ">
                                <div class="card-header">
                                    <div class="card-title mb-0">Edit Dealsoftheday</div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
										<form action="/updatedealsoftheday", method="post" , enctype="multipart/form-data">
										
                                       
                                            <div class="form-group">
                                                <label><h5>Category Name</h5></label>
                                                
                                                <select class="form-control"   name="categoryid" required  >
                                                
                                                    <option><%= dealsoftheday.categoryid.categoryname %> </option>
                                                <option >Choose..</option>
                                                
                                                <% category.forEach(function(data) { %>
                                                    <option value="<%= data._id %>"> <%= data.categoryname%> </option>
                                                    <% }) %>
                                                </select>
                                               
                                               
                                            </div>                                        <div class="form-group">
                                            <label for="inputAlias"><h5>Image</h5></label>
                                            <input type="file" class="form-control" id="inputAlias"  name="categoryicon" >
                                            <img src="/<%= dealsoftheday.categoryicon %>" alt="" height="60px" width="120px">

                                          </div>
                                          
                                          <div class="form-group">
                                            <label for="inputAlias"><h5>Description</h5></label>
                                            <input type="text" class="form-control" id="inputAlias" name="description" value="<%= dealsoftheday.description %>" placeholder="Description">
                                          </div>
                                          <div class="form-group">
                                            <label for="inputAlias"><h5>Amount Description</h5></label>
                                            <input type="text" class="form-control" id="inputAlias" name="amountdescription" value="<%= dealsoftheday.amountdescription %>" placeholder="Amount Description">
                                          </div>
                                          <div class="form-group">
                                            <label for="inputAlias"><h5>Offer Description</h5></label>
                                            <input type="text" class="form-control" id="inputAlias" name="offerdescription" value="<%= dealsoftheday.offerdescription %>" placeholder="Amount Description">
                                          </div>

                                          <div class="form-group">
                                            <label for="inputAlias"><h5>Offer Code</h5></label>
                                            <input type="text" class="form-control" id="inputAlias" name="offercode" value="<%= dealsoftheday.offercode %>" placeholder="Amount Description">
                                          </div>
                                          
                                          <div class="form-group">
                                           
                                            <input type="hidden" class="form-control" id="inputAlias" name="dealsofthedayid" value="<%= dealsoftheday._id
                                            %>" placeholder="Amount Description">
                                          </div>
                                          
                                          
                                          
                                            
                                            
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            
                                        </div>	</form>
                                    </div>
                                </div>
                            </div>
                        </div><!-- COL END -->
                    </div><!-- ROW-5 END -->
                </div>
                <!-- CONTAINER END -->
            </div>
        </div>

    

        <!-- FOOTER -->
        <%- include('../common/_footer');-%>
        <!-- FOOTER CLOSED -->
    </div>

    <!-- BACK-TO-TOP -->
   


</body>


